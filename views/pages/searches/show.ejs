<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="/styles/reset.css" />
  <link rel="stylesheet" href="/styles/base.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/modules.css" />
</head>

<body>
  <h1>Search Results</h1>
  <p><a href="/">Home</a></p>
  <ul>
    <% books.forEach(book => { %>
    <img src=<%= book.image_url %>>
    <li><%= book.title %><br><%=book.author%><br><%= book.description %></li>
    <form action="/books/insert" method='post'>
      <input type='hidden' name='title' value="<%= book.title %>">
      <input type='hidden' name='author' value="<%= book.author %>">
      <input type='hidden' name='description' value="<%= book.description %>">
      <input type='hidden' name='isbn' value="<%= book.isbn %>">
      <input type='hidden' name='bookshelf' value="<%= book.bookshelf %>">
      <input type='hidden' name='image_url' value="<%= book.image_url %>">
      <button type="submit">Add to bookshelf</button>
    </form>
    <% }) %>
  </ul>
</body>

</html>